@model DocumentGenerationApplication.Models.UserModel.ForgotPasswordModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "ForgotPassword";
}
<html>
<head>

</head>
<body style="background: #E3E3E3 ">

    <h4 style="margin-top:50px;margin-bottom:10px;">Reset Password</h4>
    <div>
        <!-- Display the alert message using ViewBag -->
        @if (ViewBag.PasswordResetAlert != null)
        {
            var isError = ViewBag.PasswordResetAlert.ToString() == "Email does not exist.";
            var icon = isError ? "error" : "success";
            var title = isError ? "Failed!" : "Success!";

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Swal.fire({
                        title: '@title',
                        text: '@ViewBag.PasswordResetAlert',
                        icon: '@icon',
                        confirmButtonText: 'OK'
                    });
                });
            </script>
        }


        <!-- Your other content goes here -->
    </div>
    <div class="row">
        <div class="col-md-4">
            <form id="myForm" asp-controller="Account" asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" maxlength="35" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    @* <input type="submit" value="Reset" class="btn btn-primary" style="color:#7066E0" /> *@
                    <input type="submit" value="Reset" class="btn text-white" style="background-color: #7066E0;" />

                </div>
            </form>

            <div style="margin-top:10px;">
                <p>--> Click <a asp-area="" asp-controller="Account" asp-action="Login">here</a> to Login </p>
            </div>
        </div>
    </div>
</body>
</html>


<script>
    function closeAlert() {
        // Hide the alert by setting its display property to 'none'
        document.getElementById('myForm').style.display = 'none';
    }
</script>








