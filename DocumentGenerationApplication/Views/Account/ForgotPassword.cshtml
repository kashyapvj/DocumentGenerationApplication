@model DocumentGenerationApplication.Models.Account.ForgotPassword

@{
    Layout = "_Layout";
}

<style>
    .forgot-wrapper {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #f5f7ff;
    }

    .forgot-card {
        width: 420px;
        background: #fff;
        padding: 35px 30px;
        border-radius: 18px;
        box-shadow: 0px 8px 20px rgba(0,0,0,0.08);
        animation: fadeIn 0.4s ease-in-out;
    }

        .forgot-card h3 {
            text-align: center;
            font-weight: 600;
            margin-bottom: 20px;
            color: #424874;
        }

    label {
        font-weight: 500;
        color: #424874;
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        background-color: #7066E0;
        border-radius: 8px;
        transition: 0.2s;
    }

        .btn-submit:hover {
            background-color: #5b53d4;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


<div class="forgot-wrapper">

    <div class="forgot-card">

        <h3>Forgot Password</h3>

        @if (TempData["TransferData"] != null)
        {
            @section Scripts {
                <script>
                    Swal.fire({
                        title: '@(TempData["Status"]?.ToString() == "success" ? "Success" : "Error")',
                        text: '@TempData["TransferData"]',
                        icon: '@TempData["Status"]'
                    });
                </script>
            }
        }

        <form method="post">

            <div class="form-group mb-3">
                <label>Email Address</label>
                <input asp-for="Email" class="form-control shadow-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-submit text-white" style="color: #7066E0;">Submit</button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted mb-0">Remembered your password?</p>
            <a asp-area="" asp-controller="Account" asp-action="Login" class="fw-bold" style="color: #7066E0;">
                Go to Login
            </a>
        </div>

    </div>

</div>


