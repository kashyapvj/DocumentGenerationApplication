@model DocumentGenerationApplication.Models.UserModel.ChangePasswordModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "ChangePassword";
}

<style>
    body {
        background: #E3E3E3;
        font-family: 'Times New Roman';
    }

    .change-wrapper {
        max-width: 420px;
        margin: 50px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        animation: fadeIn 0.8s ease-in-out;
    }

    h4 {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
        animation: slideDown 0.7s ease;
    }

    .form-control {
        height: 44px;
        border-radius: 8px;
        transition: 0.3s ease;
    }

        .form-control:focus {
            transform: scale(1.02);
            box-shadow: 0 0 10px rgba(0,123,255,0.4);
        }

    .btn-update {
        width: 100%;
        height: 45px;
        border-radius: 10px;
        background-color: #7066E0;
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        transition: 0.3s ease;
    }

        .btn-update:hover {
            transform: scale(1.05);
            background-color: #5a55d4;
        }

    a {
        text-decoration: none;
        font-weight: 500;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(25px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


<!-- SweetAlert Success / Error Messages -->
@if (ViewBag.IsSuccess == true)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success!',
                text: 'Data updated successfully',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

@if (ViewBag.IsSuccess == false)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Failed!',
                text: 'Error while updating data',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    </script>
}


<div class="change-wrapper">

    <h4>Change Password</h4>

    <form asp-action="ChangePassword">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmNewPassword"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-update mt-2">Update Password</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Logout">Back to Login</a>
    </div>
</div>

