<div class="modal-body">
    <h5 class="mb-3">Salary Breakdown Details</h5>

    @foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header text-white" style="background-color: #7066E0;color:white">
                <h6 class="mb-0">Employee: @item.EmployeeName (@item.EmployeeId)</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        @* <tr><th>Id</th><td>@item.Id</td></tr> *@
                        <tr><th>Employee Id</th><td>@item.EmployeeId</td></tr>
                        <tr><th>Employee Name</th><td>@item.EmployeeName</td></tr>
                        <tr><th>Email</th><td>@item.Email</td></tr>
                        <tr><th>Mobile</th><td>@item.MobileNumber</td></tr>
                        <tr><th>Is Metro</th><td>@(item.IsMetro ? "Yes" : "No")</td></tr>
                        <tr><th>Total Compensation</th><td>@item.TotalCompensation.ToString("0")</td></tr>
                        <tr><th>Basic</th><td>@item.Basic.ToString("0")</td></tr>
                        <tr><th>HRA</th><td>@item.HRA.ToString("0")</td></tr>
                        <tr><th>Statutory Bonus</th><td>@item.StatutoryBonus.ToString("0")</td></tr>
                        <tr><th>NPS</th><td>@item.NPS.ToString("0")</td></tr>
                        <tr><th>VPF</th><td>@item.VPF.ToString("0")</td></tr>
                        <tr><th>RFB</th><td>@item.RFB.ToString("0")</td></tr>
                        <tr><th>Special Allowance</th><td>@item.SpecialAllowance.ToString("0")</td></tr>
                        <tr><th>Total Fixed Component</th><td>@item.TotalFixedComponent.ToString("0")</td></tr>
                        <tr><th>Total Fixed Monthly Component</th><td>@item.TotalFixedMonthlyComponent.ToString("0")</td></tr>
                        <tr><th>Variable Pay</th><td>@item.VariablePay.ToString("0")</td></tr>
                        <tr><th>PF Employee</th><td>@item.PFEmployee.ToString("0")</td></tr>
                        <tr><th>ESIC Employee</th><td>@item.ESICEmployee.ToString("0")</td></tr>
                        <tr><th>Professional Tax</th><td>@item.ProfessionalTax.ToString("0")</td></tr>
                        <tr><th>Professional Tax Monthly</th><td>@item.ProfessionalTaxMonthly.ToString("0")</td></tr>
                        <tr><th>Total Deductions</th><td>@item.TotalDeductions.ToString("0")</td></tr>
                        <tr><th>Net Salary</th><td>@item.NetSalary.ToString("0")</td></tr>
                        <tr><th>PF Employer</th><td>@item.PFEmployer.ToString("0")</td></tr>
                        <tr><th>ESIC Employer</th><td>@item.ESICEmployer.ToString("0")</td></tr>
                        <tr><th>Gratuity</th><td>@item.Gratuity.ToString("0")</td></tr>
                        <tr><th>Insurance Coverage</th><td>@item.InsuranceCoverage.ToString("0")</td></tr>
                        <tr><th>Total Annual Benefits</th><td>@item.TotalAnnualBenefits.ToString("0")</td></tr>
                        <tr><th>Total Annual CTC</th><td>@item.TotalAnnualCTC.ToString("0")</td></tr>
                        <tr><th>Created On</th><td>@item.CurrentDate.ToString("dd-MM-yyyy")</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>



